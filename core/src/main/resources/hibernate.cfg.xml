<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.ar"></property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="javax.persistence.create-database-schemas">true</property>
        <property name="hibernate.default_schema">linwood</property>
        <!-- Entity mapping -->
        <mapping class="com.github.codedoctorde.linwood.core.entity.GeneralGuildEntity"/>
        <mapping class="com.github.codedoctorde.linwood.core.entity.GeneralMemberEntity"/>
        <mapping class="com.github.codedoctorde.linwood.core.entity.TeamEntity"/>
        <mapping class="com.github.codedoctorde.linwood.core.entity.TeamMemberEntity"/>
    </session-factory>
</hibernate-configuration>